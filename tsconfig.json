{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["DOM", "ES5", "ES6", "ES7", "ESNext"]
  },
  "include": ["src/**/*.ts"]
}
